{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "extends": [
    "next/core-web-vitals",
    "airbnb",
    "airbnb-typescript",
    "prettier"
  ],
  "plugins": ["@typescript-eslint"],
  "rules": {
    // Nextjs에서 기본 제공하고 있어서 해제함
    "react/react-in-jsx-scope": "off"
  }
}
