{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "extends": [
    "next/core-web-vitals",
    "airbnb",
    "airbnb-typescript",
    "prettier"
  ],
  "plugins": ["@typescript-eslint"],
  "rules": {
    // Nextjs에서 기본 제공하고 있어서 해제함
    "react/react-in-jsx-scope": "off",
    // markdown을 변환한 html을 직접 포함해야해서 해제함
    "react/no-danger": "off",
    // vanilla extract의 경우 개별 export하는 케이스가 꽤 있어 해제함
    "import/prefer-default-export": "off"
  }
}
